extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h3 Lista de Alunos
                button(class="w3-button w3-circle w3-black w3-right")
                    a(href='/alunos/registo') +
        if lista.length > 0
            div(class="w3-container")
                table(class="w3-table-all")
                    tr
                        th Número
                        th Nome
                        th Git
                    each a in lista
                        tr
                            td=a.Número
                            td
                                a(href='/alunos/'+a._id)=a.Nome
                            td=a.Git
        else
            div(class="w3-container")
                p Ainda não há alunos registados
        footer(class="w3-container w3-teal")
            address Gerado por aluno :: 2020-Dezembro, Guilherme Martins