extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h3 Registo de Aluno novo
        div(class="w3-container")
            form(action='/registo', method='POST')
                p Número:
                    input(type="text" name="Número" value='')
                p Nome:
                    input(type="text" name="Nome" value='')
                p Git:
                    input(type="text" name="Git" value='')
                input(type='submit', value='Registar')
                input(type='reset' value='Limpar valores')
        .w3-container
            p 
                a(href='/alunos') Voltar à pagina de Alunos
            
        footer(class="w3-container w3-teal")
            address Gerado por aluno :: 2020-Dezembro, Guilherme Martins